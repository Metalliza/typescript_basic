{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "src/",
    "outDir": "dist/"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "src/**/*.tt.ts",
    "src/test",
    "dist",
    "tmp"
  ]
}
